# Seismic Event Classification Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys and Authentication (if required in the future)
# USGS_API_KEY=your_usgs_api_key_here
# IRIS_USERNAME=your_iris_username_here
# IRIS_PASSWORD=your_iris_password_here

# Database Configuration (if using a database)
# DATABASE_URL=postgresql://username:password@localhost:5432/seismic_db
# MONGODB_URI=mongodb://localhost:27017/seismic_data

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/seismic_classifier.log

# Performance Settings
MAX_WORKERS=4
MEMORY_LIMIT=8GB
BATCH_SIZE=100

# Dashboard Configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=true

# Email Notifications (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=alerts@yourdomain.com

# External Services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Data Storage Paths
DATA_ROOT_PATH=./data
MODELS_PATH=./data/models
CACHE_PATH=./data/cache
RESULTS_PATH=./data/results

# Development Settings
DEBUG_MODE=true
TESTING_MODE=false
DEVELOPMENT_MODE=true

# Security Settings (if implementing authentication)
# SECRET_KEY=your_secret_key_for_sessions
# JWT_SECRET=your_jwt_secret_key
# ENCRYPTION_KEY=your_encryption_key

# Rate Limiting
USGS_RATE_LIMIT=10
IRIS_RATE_LIMIT=5
API_TIMEOUT=30

# Model Training Settings
TRAINING_RANDOM_STATE=42
CROSS_VALIDATION_FOLDS=5
HYPERPARAMETER_TUNING_JOBS=-1

# Monitoring and Alerts
ALERT_MAGNITUDE_THRESHOLD=6.0
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false
